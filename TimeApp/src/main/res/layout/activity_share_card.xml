<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sharecard.ShareCardActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="270pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="36pt"
        android:background="#EE386D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_content_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31pt"
            android:layout_marginTop="46pt"
            android:text="距离"
            android:textColor="#FFFFFF"
            android:textSize="13pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31pt"
            android:text="锤科新品发布会"
            android:textColor="#FFFFFF"
            android:textSize="21pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_hint"/>
        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12pt"
            android:layout_marginRight="31pt"
            android:includeFontPadding="false"
            android:text="天"
            android:textColor="#FFFFFF"
            android:textSize="13pt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_day"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_day_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12pt"
            android:layout_marginLeft="31pt"
            android:layout_marginTop="110pt"
            android:includeFontPadding="false"
            android:text="还有"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_day"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6pt"
            android:layout_marginTop="71pt"
            android:includeFontPadding="false"
            android:text="256"
            android:textColor="#FFFFFF"
            android:textSize="59pt"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/tv_unit"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="31pt"
            android:layout_marginTop="20pt"
            android:text="2018-05-03 — 2018-05-15"
            android:textColor="#FFFFFF"
            android:textSize="7pt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_day"/>

        <View
            android:id="@+id/view_separate"
            android:layout_width="0dp"
            android:layout_height="1pt"
            android:layout_marginLeft="29pt"
            android:layout_marginRight="29pt"
            android:layout_marginTop="5pt"
            android:background="#B2FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31pt"
            android:layout_marginRight="31pt"
            android:layout_marginTop="5pt"
            android:lineSpacingExtra="3pt"
            android:text="这次你离开了没有像以前那样说再见 再见也tmd只是再见 我们之间从来没有想象的那么接近 只是两棵树的距离 你是否还记得山阴路我八楼的房间 房间里唱歌的日日夜夜 那么热的夏天你看着外面 看着你在消逝的容颜 我多么想念你走在我身边的样子"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_separate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22pt"
            android:layout_marginLeft="31pt"
            android:layout_marginTop="20pt"
            android:text="来自倒数日 时间管理APP"
            android:textColor="#FFFFFF"
            android:textSize="7pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"/>

        <View
            android:layout_width="0pt"
            android:layout_height="0dp"
            android:layout_marginBottom="9pt"
            android:layout_marginLeft="7pt"
            android:layout_marginRight="7pt"
            android:layout_marginTop="9pt"
            android:background="@drawable/shape_share_card_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </View>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="69pt"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <RadioGroup
            android:id="@+id/radio_color_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_color_ee386d"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_ee386d"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_139eed"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_139eed"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_ffc529"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_ffc529"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_9092a5"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_9092a5"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_ff8e9f"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_ff8e9f"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_2b0050"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_2b0050"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/radio_color_fd92c4"
                android:layout_width="38pt"
                android:layout_height="38pt"
                android:layout_margin="4pt"
                android:background="@drawable/selector_ic_color_fd92c4"
                android:button="@null"/>
        </RadioGroup>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>