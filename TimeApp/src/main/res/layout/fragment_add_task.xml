<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="238pt"
        android:layout_height="77pt"
        android:layout_marginTop="60pt"
        android:background="@drawable/shape_add_task_reciprocal_bg">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="14pt"
            android:text="设定倒数日"
            android:textColor="#FFFFFF"
            android:textSize="20pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="6pt"
            android:text="今日或未来"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <ImageView
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_marginBottom="8pt"
            android:layout_marginRight="1pt"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_add_task_reciprocal"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="238pt"
        android:layout_height="77pt"
        android:layout_marginTop="36pt"
        android:background="@drawable/shape_add_task_accumulative_bg">
        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="14pt"
            android:text="设定累计日"
            android:textColor="#FFFFFF"
            android:textSize="20pt"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16pt"
            android:layout_marginTop="6pt"
            android:text="历史日或今日"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title1"/>
        <ImageView
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_marginBottom="8pt"
            android:layout_marginRight="1pt"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_add_task_accumulative"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>