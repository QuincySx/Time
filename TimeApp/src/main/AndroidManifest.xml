<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.smallraw.time">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.PreviewTaskActivity">
        </activity>
        <activity android:name=".ui.addTask.AddTaskActivity">
        </activity>
        <activity android:name=".ui.taskInfo.TaskInfoActivity">
        </activity>
        <activity android:name=".ui.shareCard.ShareCardActivity">
        </activity>
        <activity android:name=".ui.recycleBin.RecycleBinActivity">
        </activity>
        <activity android:name=".ui.archivingClip.ArchivingClipActivity">
        </activity>
        <activity android:name=".ui.about.AboutActivity">
        </activity>
    </application>

</manifest>